<h1>Kondisi If</h1>
<?php
$nama_hari = date("1");
if ($nama_hari == "Sunday") {
    echo "Minggu";
} elseif ($nama_hari == "Monday") {
    echo "senin";
} else {
    echo "selasa";
}
?>
